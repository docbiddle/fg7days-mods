	<config name="blocks">

		<append xpath="/blocks">
		<block id="74" name="titaniumOre">
			<property name="Extends" value="ice" />
			<property name="CustomIcon" value="ice" />
			<property name="Material" value="Mmetal_medium" />
			<property name="MaxDamage" value="1250" />
			<property name="DropScale" value="2" />
			<drop event="Harvest" name="TitaniumFragment" count="19" prob="1.0" tool_category="harvestingTools"/>
			<drop event="Destroy" count="0"/>
			<drop event="Fall" name="TitaniumFragment" count="36" prob=".75" stick_chance="0" />
			<property name="CanMobsSpawnOn" value="true"/>
		</block>

		<block id="75" name="copperOre">
			<property name="Extends" value="sandStone" />
			<property name="CustomIcon" value="sandStone" />
			<property name="Material" value="copper" />
			<property name="MaxDamage" value="300" />
			<property name="DropScale" value="2" />
			<property class="RepairItems"> <property name="CopperFragment" value="10"/> </property>
			<drop event="Harvest" name="CopperFragment" count="10" tool_category="harvestingTools"/>
			<drop event="Harvest" name="crushedSand" count="0" tool_category="harvestingTools"/>
			<drop event="Harvest" name="rockSmall" count="0" tool_category="harvestingTools"/>
			<drop event="Destroy" count="0"/>
			<drop event="Fall" name="CopperFragment" count="10" prob="0.5" stick_chance="0" />
			<drop event="Fall" name="crushedSand" count="0" prob="0" stick_chance="0"/>
			<drop event="Fall" name="rockSmall" count="0" prob="0" stick_chance="0"/>
			<property name="CanMobsSpawnOn" value="true" />
		</block>
		<!-- WOTW MOD -->
		<block id="77" name="gravelPlusTitanium">
			<property name="Extends" value="gravel"/>
			<drop event="Harvest" name="TitaniumFragment" count="3" prob="0.25" tool_category="harvestingTools"/>
			<drop event="Destroy" name="TitaniumFragment" count="5"/>
			<property name="CreativeMode" value="Dev"/>
		</block>

		<!-- WOTW MOD -->
		<block id="78" name="gravelPlusCopper">
			<property name="Extends" value="gravel"/>
			<drop event="Harvest" name="CopperFragment" count="3" prob="0.25" tool_category="harvestingTools"/>
			<drop event="Destroy" name="CopperFragment" count="5"/>
			<property name="CreativeMode" value="Dev"/>
		</block>
		</append>
